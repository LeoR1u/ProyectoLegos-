<h1>Catálogo</h1>

<div class="grid">
  <% products.forEach(p => { %>
    <div class="card">
      <img src="<%= p.image %>" width="200">
      <h3><%= p.name %></h3>
      <p>$<%= p.price %></p>

      <% if (user) { %>
        <form action="/add-to-cart/<%= p.id %>" method="POST">
          <button type="submit">Añadir al carrito</button>
        </form>
      <% } else { %>
        <p><a href="/login">Inicia sesión para comprar</a></p>
      <% } %>
    </div>
  <% }) %>
</div>
